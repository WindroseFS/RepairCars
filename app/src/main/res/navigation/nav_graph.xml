<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_chats">

    <!-- Fragments Principais (APENAS OS QUE RESTARAM) -->
    <fragment
        android:id="@+id/nav_chats"
        android:name="com.thorapps.repaircars.chats.ChatsFragment"
        android:label="Conversas"
        tools:layout="@layout/fragment_chats" />

    <fragment
        android:id="@+id/nav_contacts"
        android:name="com.thorapps.repaircars.contacts.ContactsFragment"
        android:label="Contatos"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/nav_notifications"
        android:name="com.thorapps.repaircars.notifications.NotificationsFragment"
        android:label="Notificações"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/nav_news"
        android:name="com.thorapps.repaircars.news.NewsActivity"
        android:label="Notícias"
        tools:layout="@layout/activity_news" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.thorapps.repaircars.settings.SettingsFragment"
        android:label="Configurações"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_help"
        android:name="com.thorapps.repaircars.help.HelpFragment"
        android:label="Ajuda"
        tools:layout="@layout/fragment_help" />

    <!-- Activities (se houver) -->
    <activity
        android:id="@+id/nav_chat_activity"
        android:name="com.thorapps.repaircars.ChatActivity"
        android:label="Chat" />

    <!-- Resto do navigation graph... -->

</navigation>