<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ivContactPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@color/light_gray"
        android:src="@drawable/ic_person"
        android:contentDescription="Foto do contato" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JoÃ£o Silva"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Nome do Contato" />

        <TextView
            android:id="@+id/tvContactPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="(11) 99999-9999"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="(11) 99999-9999" />

    </LinearLayout>

</LinearLayout>