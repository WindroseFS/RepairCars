<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Layout de Contato Padrão (VISÍVEL por padrão) -->
    <LinearLayout
        android:id="@+id/contactLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivContactPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@color/light_gray"
            android:src="@drawable/ic_person"
            android:contentDescription="Foto do contato" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="João Silva"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Nome do Contato" />

            <TextView
                android:id="@+id/tvContactPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="(11) 99999-9999"
                android:textColor="@color/gray"
                android:textSize="14sp"
                tools:text="(11) 99999-9999" />

            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Última mensagem"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                tools:text="Última mensagem do chat" />

        </LinearLayout>

    </LinearLayout>

    <!-- Layout de Chat/Contato (alternativo) -->
    <LinearLayout
        android:id="@+id/chatContactLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvChatContactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do contato"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/tvChatLastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Última mensagem"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Layout de Informações de Banco de Dados -->
    <LinearLayout
        android:id="@+id/databaseInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_margin="8dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvTableName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tabela: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvRowCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registros: "
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colunas: "
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="#888888" />

    </LinearLayout>

</LinearLayout>