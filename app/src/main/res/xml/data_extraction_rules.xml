<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <include domain="root" />
        <include domain="file" />
        <include domain="database" />
        <include domain="sharedpref" />
        <include domain="external" />

        <!-- Excluir dados sensíveis -->
        <exclude domain="root" path="cache"/>
        <exclude domain="database" path="sensitive_data.db"/>
        <exclude domain="sharedpref" path="sensitive_prefs.xml"/>
    </cloud-backup>

    <device-transfer>
        <include domain="root" />
        <include domain="file" />
        <include domain="database" />
        <include domain="sharedpref" />
        <include domain="external" />

        <!-- Excluir dados sensíveis -->
        <exclude domain="root" path="cache"/>
        <exclude domain="database" path="sensitive_data.db"/>
        <exclude domain="sharedpref" path="sensitive_prefs.xml"/>
    </device-transfer>
</data-extraction-rules>